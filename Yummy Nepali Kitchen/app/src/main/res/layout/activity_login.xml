<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.deepak.yummynepalikitchen.LoginActivity">
    <!-- Created by www.deepakgyawali.com.np on 28/11/2017. -->
    <ImageView
        android:id="@+id/YarbirdLogo"
        android:layout_width="276dp"
        android:layout_height="158dp"
        android:src="@drawable/logo"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edUsername"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Username"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_border_edittext"
        android:layout_below="@id/YarbirdLogo"/>

    <EditText
        android:id="@+id/edPassword"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_border_edittext"
        android:layout_below="@id/edUsername"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_marginTop="14dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_round_corners"
        android:layout_below="@id/edPassword"
        android:onClick="onLogin"/>

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sign up"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="50dp"
        android:layout_alignParentLeft="true"
        android:background="@null"
        android:layout_below="@id/btnLogin"/>

    <Button
        android:id="@+id/forgotPasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="forgot password"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="50dp"
        android:background="@null"
        android:layout_below="@id/btnLogin"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/simpleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgotPasswordButton"
        android:text="By signing up. I agree to Yummy Nepali Kitchen Terms of Service Privacy Policy. Guest Refund Policy. and Host Gurantee Term."
        android:textSize="12sp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#FFFFFF"
        android:layout_alignParentRight="true"/> <!--center horizontal gravity-->


</RelativeLayout>

